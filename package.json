{
  "name": "timely-chat-vscode",
  "displayName": "Timely Chat",
  "description": "Timely GPT AI Chat integration for VS Code with keyboard shortcuts, chat history, and code sharing",
  "version": "1.0.1",
  "publisher": "HID",
  "repository": {
    "type": "git",
    "url": "https://github.com/gary5876/timely-extension-v1.git"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "chat",
    "ai",
    "timely",
    "chatbot",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "timely-chat.openChat",
        "title": "Timely Chat: 채팅 열기",
        "icon": {
          "light": "media/timely-icon.svg",
          "dark": "media/timely-icon.svg"
        }
      },
      {
        "command": "timely-chat.closeChat",
        "title": "Timely Chat: 채팅 닫기",
        "icon": "$(close)"
      },
      {
        "command": "timely-chat.configure",
        "title": "Timely Chat: 설정"
      },
      {
        "command": "timely-chat.sendSelection",
        "title": "Timely Chat: 선택한 코드 전송",
        "icon": "$(comment)"
      },
      {
        "command": "timely-chat.newChat",
        "title": "Timely Chat: 새 대화",
        "icon": "$(add)"
      },
      {
        "command": "timely-chat.clearHistory",
        "title": "Timely Chat: 대화 기록 삭제"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "timely-chat.openChat",
          "group": "navigation@100"
        }
      ],
      "editor/context": [
        {
          "command": "timely-chat.sendSelection",
          "when": "editorHasSelection",
          "group": "timely-chat@1"
        }
      ],
      "view/title": [
        {
          "command": "timely-chat.newChat",
          "when": "view == timely-chat.sidebarView",
          "group": "navigation@1"
        },
        {
          "command": "timely-chat.openChat",
          "when": "view == timely-chat.sidebarView",
          "group": "navigation@2"
        },
        {
          "command": "timely-chat.closeChat",
          "when": "view == timely-chat.sidebarView",
          "group": "navigation@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "timely-chat.openChat",
        "key": "ctrl+alt+c",
        "mac": "cmd+option+c"
      },
      {
        "command": "timely-chat.sendSelection",
        "key": "ctrl+alt+s",
        "mac": "cmd+option+s",
        "when": "editorHasSelection"
      },
      {
        "command": "timely-chat.newChat",
        "key": "ctrl+alt+n",
        "mac": "cmd+option+n"
      }
    ],
    "configuration": {
      "title": "Timely Chat",
      "properties": {
        "timelyChat.apiKey": {
          "type": "string",
          "default": "",
          "description": "Timely GPT API Key (필수)",
          "markdownDescription": "Timely GPT API Key를 입력하세요. [API Key 발급받기](https://timelygpt.co.kr)"
        },
        "timelyChat.model": {
          "type": "string",
          "default": "gpt-4.1",
          "description": "사용할 AI 모델"
        },
        "timelyChat.instructions": {
          "type": "string",
          "default": "",
          "description": "AI에게 전달할 커스텀 지시사항 (선택)"
        },
        "timelyChat.enableFileOperations": {
          "type": "boolean",
          "default": true,
          "description": "AI 파일 읽기/쓰기/편집 기능 활성화"
        },
        "timelyChat.fileOperationAutoApply": {
          "type": "boolean",
          "default": false,
          "description": "파일 편집 시 자동 적용 (확인 없이)"
        },
        "timelyChat.blockedFilePatterns": {
          "type": "array",
          "default": [".env", ".env.*", "*.key", "*.pem", "credentials.*"],
          "description": "AI 접근을 차단할 파일 패턴"
        },
        "timelyChat.maxFileReadSize": {
          "type": "number",
          "default": 100000,
          "description": "AI가 읽을 수 있는 최대 파일 크기 (바이트)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@timely/gpt-sdk": "github:timely-hub/timely-gpt-sdk"
  }
}
